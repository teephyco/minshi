<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/picture_color_white"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:onClick="goBack"
            android:src="@drawable/ic_back_arrow_black"
            android:layout_height="20dp"
            android:contentDescription="@android:string/search_go" />
        <TextView
            android:id="@+id/av_title"
            android:text="@string/my_self"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/black_color"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="42dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="12dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="switchList"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/untreated"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/unsettled"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="20dp"
                android:id="@+id/event_type1"
                android:layout_gravity="center_horizontal"
                android:background="@color/themeColor"
                android:layout_width="100dp"
                android:layout_height="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="switchList"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/finished"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/settled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="20dp"
                android:id="@+id/event_type2"
                android:layout_gravity="center_horizontal"
                android:background="@color/themeColor"
                android:layout_width="100dp"
                android:visibility="invisible"
                android:layout_height="2dp"/>
        </LinearLayout>
    </LinearLayout>
<!--    <include layout="@layout/item_event"/>-->
    <View
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <ListView
        android:id="@+id/event_list_lv"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
