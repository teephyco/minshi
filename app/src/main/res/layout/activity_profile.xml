<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.25"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            app:layout_constraintGuide_percent="0.11"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/background_head"
            android:contentDescription="@string/my_picture"
            android:src="@drawable/profile_head_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:onClick="goBack"
                android:src="@drawable/ic_back_arrow_white"
                android:layout_height="20dp"
                android:contentDescription="@android:string/search_go"/>
            <TextView
                android:id="@+id/av_title"
                android:text="@string/my_self"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/picture_color_white"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="42dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_head"
            android:onClick="chosePicture"
            android:layout_gravity="center"
            android:src="@drawable/placeholder_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="@id/guideline1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <LinearLayout
            android:id="@+id/body"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:background="@color/picture_color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/background_head">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/black_color"
                    android:text="用户名"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/profile_user"
                    android:textSize="16sp"
                    android:textColor="@color/font_default"
                    android:layout_gravity="center"
                    android:text="@string/temp_name"
                    android:layout_marginEnd="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/black_color"
                    android:text="昵称"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/profile_nickname"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:textColor="@color/font_default"
                    android:hint="可输入6位昵称"
                    android:layout_marginEnd="30dp"
                    android:maxLength="6"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/black_color"
                    android:text="手机号"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/profile_telephone"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/font_default"
                    android:text="13343692331"
                    android:layout_marginEnd="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/black_color"
                    android:text="小区"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/profile_community"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/font_default"
                    android:text="海洋国际"
                    android:layout_marginEnd="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/black_color"
                    android:text="房号"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/profile_room_num"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/font_default"
                    android:text="10栋3单元602号"
                    android:layout_marginEnd="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:onClick="save"
            android:background="@drawable/white_bolder"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black_color"
            android:text="@string/save_it"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/body"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
