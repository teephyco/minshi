<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drag_fl"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.27"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            app:layout_constraintGuide_percent="0.13"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/background_head"
            android:contentDescription="@string/my_picture"
            android:src="@drawable/profile_head_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_self"
            android:layout_marginTop="52dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/picture_color_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_gravity="center"
            android:src="@drawable/placeholder_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/guideline1"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="@string/temp_name"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/head"
            app:layout_constraintTop_toTopOf="@id/guideline1"/>
        <TextView
            android:id="@+id/user_type"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@android:color/white"
            android:text="@string/type_host"
            android:background="@drawable/yellow_bolder"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/user_name"
            app:layout_constraintTop_toTopOf="@id/guideline1"/>
        <ImageView
            android:id="@+id/right_arrow"
            android:onClick="showMyProfile"
            android:contentDescription="@string/my_picture"
            android:src="@drawable/ic_right_arrow"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/guideline1"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/user_location"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:text="@string/temp_location"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/head"
            app:layout_constraintRight_toLeftOf="@id/right_arrow"
            app:layout_constraintTop_toBottomOf="@id/user_name"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/body"
            android:orientation="vertical"
            android:background="@drawable/white_bolder_little"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/head">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:onClick="modifyPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_mod_pw_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black_color"
                    android:layout_marginStart="12dp"
                    android:text="@string/modify_pw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/common_icon_arrow_right2"
                    android:contentDescription="@string/my_picture"
                    android:layout_width="20dp"
                    android:layout_marginEnd="18dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:onClick="showMyProfile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_material_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black_color"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:text="@string/my_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/common_icon_arrow_right2"
                    android:contentDescription="@string/my_picture"
                    android:layout_width="20dp"
                    android:layout_marginEnd="18dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:onClick="faceManager"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_face_manager_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black_color"
                    android:layout_marginStart="12dp"
                    android:text="@string/face_manager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/common_icon_arrow_right2"
                    android:contentDescription="@string/my_picture"
                    android:layout_width="20dp"
                    android:layout_marginEnd="18dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:onClick="traceRecord"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_trace_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black_color"
                    android:layout_marginStart="12dp"
                    android:text="@string/trace_recording"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/common_icon_arrow_right2"
                    android:contentDescription="@string/my_picture"
                    android:layout_width="20dp"
                    android:layout_marginEnd="18dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:onClick="aboutUs"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_about_us_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black_color"
                    android:layout_marginStart="12dp"
                    android:text="@string/about_us"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/common_icon_arrow_right2"
                    android:contentDescription="@string/my_picture"
                    android:layout_width="20dp"
                    android:layout_marginEnd="18dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:textColor="@color/black_color"
            android:layout_marginTop="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:onClick="exit"
            android:background="@drawable/white_bolder"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/sign_out"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/body"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
