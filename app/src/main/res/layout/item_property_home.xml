<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gray_frame"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/develop_iv"
        android:contentDescription="@string/my_picture"
        android:src="@drawable/property_home"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginStart="12dp"
        android:id="@+id/title"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="小区"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:textColor="@color/black_color"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/description_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/browse_num_iv"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/my_picture"
            android:src="@drawable/ic_see_pw"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/browse_num"
            android:textSize="18sp"
            android:layout_toEndOf="@id/browse_num_iv"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/themeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/browse"
            android:layout_toEndOf="@id/browse_num"
            android:text="人浏览"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            android:layout_centerVertical="true"
            android:textColor="@color/darkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/timestamp"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/darkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
