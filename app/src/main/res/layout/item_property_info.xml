<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/picture_color_white"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:id="@+id/common_title"
            android:textColor="@color/black_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/emergency_notice"
            android:layout_marginEnd="12dp"
            android:paddingStart="5dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="5dp"
            android:text="@string/emergency_notice"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bolder_red_tv"
            android:textColor="@color/picture_color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:id="@+id/info_content"
        android:textColor="@color/black_color"
        android:maxLines="5"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/darkGray"
            android:id="@+id/common_timestamp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginStart="8dp"
            android:contentDescription="@string/my_picture"
            android:src="@drawable/ic_see_pw"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/darkGray"
            android:id="@+id/common_click_count"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
