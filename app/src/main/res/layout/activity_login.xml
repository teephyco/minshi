<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/login_background"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:contentDescription="@string/my_picture"
            android:visibility="visible"
            android:src="@drawable/theme_head"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.29"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:background="@drawable/bolder"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline">
            <ImageView
                android:contentDescription="@string/my_picture"
                android:src="@drawable/app_icon"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:layout_marginTop="38dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/head_iv"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_head_default"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <EditText
                    android:id="@+id/login_telephone_et"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="4dp"
                    android:inputType="number"
                    android:maxLength="11"
                    android:background="@android:color/transparent"
                    android:hint="@string/input_telephone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no" />

            </LinearLayout>
            <View
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/pw_iv"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_lock_default"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <EditText
                    android:id="@+id/login_password_et"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="4dp"
                    android:inputType="textPassword"
                    android:digits="@string/password_contain"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no" />
            </LinearLayout>
            <View
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:onClick="forgetPassword"
                android:gravity="end"
                android:textColor="@color/themeColor"
                android:text="@string/forget_password"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:onClick="goHome"
                android:background="@drawable/blue_button"
                android:layout_width="match_parent"
                android:text="@string/login"
                android:textColor="@color/app_color_f6"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="40dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_marginTop="25dp"
                android:src="@drawable/logo_text"
                android:contentDescription="@string/my_picture"
                android:layout_width="match_parent"
                android:layout_height="24dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/background"
        android:visibility="gone"
        android:background="@color/darkGray"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/pay_progress_layout"
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/pay_progress"
            android:indeterminateTint="@color/themeColor"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pay_load_state"
            android:textSize="20sp"
            android:textColor="@color/themeColor"
            android:text="@string/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>


