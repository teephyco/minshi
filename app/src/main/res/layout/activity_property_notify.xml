<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.22"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/background_head"
        android:contentDescription="@string/my_picture"
        android:src="@drawable/profile_head_bg"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"/>
    <RelativeLayout
        android:id="@+id/top_bar"
        android:orientation="horizontal"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:onClick="goBack"
            android:src="@drawable/ic_back_arrow_white"
            android:layout_height="20dp"
            android:contentDescription="@android:string/search_go"/>
        <TextView
            android:id="@+id/av_title"
            android:text="@string/my_self"
            android:layout_width="match_parent"
            android:textColor="@color/picture_color_white"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/change_info_data"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/picture_color_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/notify_lv"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="switchList"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/untreated"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/read"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="20dp"
                android:id="@+id/event_type1"
                android:layout_gravity="center_horizontal"
                android:background="@color/themeColor"
                android:layout_width="100dp"
                android:layout_height="2dp"/>
            <View
                android:background="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="switchList"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/finished"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/unread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="20dp"
                android:id="@+id/event_type2"
                android:layout_gravity="center_horizontal"
                android:background="@color/themeColor"
                android:layout_width="100dp"
                android:visibility="invisible"
                android:layout_height="2dp"/>
            <View
                android:background="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/notify_lv"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/change_info_data"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>




