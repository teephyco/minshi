<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/background_color"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.22"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/background_head"
            android:contentDescription="@string/my_picture"
            android:src="@drawable/profile_head_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:onClick="goBack"
                android:src="@drawable/ic_back_arrow_white"
                android:layout_height="20dp"
                android:contentDescription="@android:string/search_go"/>
            <TextView
                android:id="@+id/av_title"
                android:text="@string/my_self"
                android:layout_width="match_parent"
                android:textColor="@color/picture_color_white"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"/>
            <TextView
                android:text="@string/history_events"
                android:layout_marginEnd="14dp"
                android:layout_alignParentEnd="true"
                android:onClick="showHistory"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/picture_color_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/white_bolder"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:layout_gravity="center"
                android:contentDescription="@string/my_picture"
                android:src="@drawable/ic_location"
                android:layout_marginStart="13dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/report_location"
                android:text="金港华庭13栋1103"
                android:textColor="@color/black_color"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bolder"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/white_bolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_marginStart="14dp"
                            android:background="@color/themeColor"
                            android:layout_width="6dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginStart="13dp"
                            android:textSize="18sp"
                            android:textColor="@color/black_color"
                            android:text="@string/service_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="@string/family_maintain"
                                android:onClick="selectAction"
                                android:id="@+id/report_tv1"
                                android:textColor="@color/black_color"
                                android:background="@drawable/bolder_unselected"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:layout_width="95dp"
                                android:layout_height="44dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="@string/guarantee"
                                android:onClick="selectAction"
                                android:textColor="@color/black_color"
                                android:id="@+id/report_tv2"
                                android:background="@drawable/bolder_unselected"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:layout_width="95dp"
                                android:layout_height="44dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/report_tv3"
                                android:onClick="selectAction"
                                android:text="@string/advice"
                                android:textColor="@color/black_color"
                                android:background="@drawable/bolder_unselected"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:layout_width="95dp"
                                android:layout_height="44dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_marginStart="14dp"
                            android:background="@color/themeColor"
                            android:layout_width="6dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginStart="13dp"
                            android:textSize="18sp"
                            android:textColor="@color/black_color"
                            android:text="@string/input_report_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:background="@drawable/bolder_gray"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="146dp">
                        <EditText
                            android:id="@+id/et"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textSize="16sp"
                            android:textCursorDrawable="@drawable/my_cursor"
                            android:gravity="left"
                            android:background="@null"
                            android:autofillHints=""
                            android:hint="@string/input_tips"
                            android:inputType="none"
                            tools:ignore="LabelFor,RtlHardcoded" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dp">
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/change_tv"
                                android:text="@string/zero"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:text="@string/limit_num"
                                android:layout_marginEnd="6dp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="14dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_marginStart="14dp"
                            android:background="@color/themeColor"
                            android:layout_width="6dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginStart="13dp"
                            android:textSize="18sp"
                            android:textColor="@color/black_color"
                            android:text="@string/report_photos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView

                            android:id="@+id/recycler"

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:layout_marginLeft="8dp"

                            android:layout_marginRight="8dp"

                            android:overScrollMode="never" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:onClick="commit"
            android:background="@drawable/white_bolder"
            android:text="@string/commit"
            android:gravity="center"
            android:textColor="@color/black_color"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/shadow_fl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:alpha="0.5"
            android:background="@color/darkGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:indeterminateTint="@color/themeColor"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</FrameLayout>
