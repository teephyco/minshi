<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".home.EventDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/background_color"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.22"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/background_head"
            android:contentDescription="@string/my_picture"
            android:src="@drawable/profile_head_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:onClick="goBack"
                android:src="@drawable/ic_back_arrow_white"
                android:layout_height="20dp"
                android:contentDescription="@android:string/search_go"/>
            <TextView
                android:id="@+id/av_title"
                android:text="@string/my_self"
                android:layout_width="match_parent"
                android:textColor="@color/picture_color_white"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/white_bolder"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:contentDescription="@string/my_picture"
                android:src="@drawable/ic_location"
                android:layout_gravity="center"
                android:layout_marginStart="13dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/ed_location"
                android:layout_weight="1"
                android:text="金港华庭13栋1103"
                android:textColor="@color/black_color"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ed_status"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:textSize="18sp"
                android:textColor="@color/themeColor"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_bolder"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_marginStart="14dp"
                            android:background="@color/themeColor"
                            android:layout_width="6dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginStart="13dp"
                            android:textSize="18sp"
                            android:textColor="@color/black_color"
                            android:text="报事时间 ："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="18sp"
                            android:id="@+id/ed_timestamp"
                            android:textColor="@color/darkGray"
                            android:text="2019-06-23 16:48:23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_marginStart="14dp"
                            android:background="@color/themeColor"
                            android:layout_width="6dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginStart="13dp"
                            android:textSize="18sp"
                            android:textColor="@color/black_color"
                            android:text="报事类别 ："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/ed_event_type"
                            android:textSize="18sp"
                            android:textColor="#FF6200"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_marginStart="14dp"
                            android:background="@color/themeColor"
                            android:layout_width="6dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginStart="13dp"
                            android:textSize="18sp"
                            android:textColor="@color/black_color"
                            android:text="报事内容"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="16dp"
                        android:id="@+id/ed_content"
                        android:background="@drawable/bolder_gray"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="14dp"
                        android:paddingTop="15dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="7dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"/>
                    <LinearLayout
                        android:id="@+id/ed_show_picture"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_marginStart="14dp"
                                android:background="@color/themeColor"
                                android:layout_width="6dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_marginStart="13dp"
                                android:textSize="18sp"
                                android:textColor="@color/black_color"
                                android:text="图片信息"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <com.yalianxun.mingshi.view.CustomGridView
                            android:visibility="gone"
                            android:id="@+id/ed_gv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:columnWidth="90dp"
                            android:horizontalSpacing="10dp"
                            android:numColumns="auto_fit"
                            android:scrollbars="none"
                            android:verticalSpacing="10dp" />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">
                            <ImageView
                                android:id="@+id/ed_pic1"
                                android:layout_margin="5dp"
                                android:src="@drawable/placeholder_pic"
                                android:contentDescription="@string/my_picture"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:id="@+id/ed_pic2"
                                android:layout_margin="5dp"
                                android:src="@drawable/placeholder_pic"
                                android:contentDescription="@string/my_picture"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:id="@+id/ed_pic3"
                                android:layout_margin="5dp"
                                android:src="@drawable/placeholder_pic"
                                android:contentDescription="@string/my_picture"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/feedback_layout"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_marginStart="14dp"
                                android:background="@color/themeColor"
                                android:layout_width="6dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_marginStart="13dp"
                                android:textSize="18sp"
                                android:textColor="@color/black_color"
                                android:text="反馈结果"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/ed_feedback"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="20dp"
                            android:text="收到，已安排处理"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/ed_bottom"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:background="@drawable/bolder_blue_tv"
                android:visibility="gone"
                android:text="撤销"
                android:textSize="16sp"
                android:textColor="@color/app_color_f6"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="84dp"
                android:layout_height="24dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
