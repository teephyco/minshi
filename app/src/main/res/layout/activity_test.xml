<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <WebView
            android:id="@+id/web"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <View
                android:layout_centerHorizontal="true"
                android:background="@drawable/semicircle_bolder"
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="#eeeeee"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:onClick="showOpenDoor"
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_guard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:text="门禁"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_home"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="30dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:text="首页"
                    android:textSize="12sp"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/themeColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="RelativeOverlap,UseCompoundDrawables">
                <ImageView
                    android:onClick="goToPersonalCenter"
                    android:contentDescription="@string/my_picture"
                    android:src="@drawable/ic_personal"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="30dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:text="@string/my_self"
                    android:textSize="12sp"
                    android:layout_marginEnd="30dp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/open_door_view"
        android:onClick="doNothing"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/black_color"
            android:alpha="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/shortcut_view"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_bolder"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <TextView
                android:layout_marginTop="20dp"
                android:text="@string/open_door_shortcut"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/black_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ListView
                android:id="@+id/shortcut_open_lv"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="-10dp"
            android:onClick="hideOpenDoor"
            android:contentDescription="@string/my_picture"
            android:src="@drawable/ic_delete_menu"
            android:layout_alignTop="@id/shortcut_view"
            android:layout_alignEnd="@id/shortcut_view"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>


</FrameLayout>
