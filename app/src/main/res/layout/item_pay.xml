<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="80dp">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:baselineAligned="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="54dp"
            android:layout_marginStart="11dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/pay_date_month"
                android:text="02"
                android:gravity="center"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pay_date_year"
                android:text="2019"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/pay_location"
                android:text="港湾海岸18栋1001"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pay_user_info"
                android:text="王先生 135****3769"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#CCCCCC"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/pay_cost"
                android:text="¥2020.20"
                android:layout_marginTop="6dp"
                android:gravity="right"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:text="待缴费"
                android:id="@+id/pay_status"
                android:layout_marginTop="8dp"
                android:gravity="right"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded" />
            <View
                android:background="#CCCCCC"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/item_pay_iv"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="30dp"
        android:src="@drawable/common_icon_arrow_right2"
        android:contentDescription="@string/my_picture" />
</LinearLayout>
