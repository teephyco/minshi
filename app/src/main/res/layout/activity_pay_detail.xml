<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/background_color"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.22"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/background_head"
            android:contentDescription="@string/my_picture"
            android:src="@drawable/profile_head_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:onClick="goBack"
                android:src="@drawable/ic_back_arrow_white"
                android:layout_height="20dp"
                android:contentDescription="@android:string/search_go"/>
            <TextView
                android:id="@+id/av_title"
                android:text="@string/my_self"
                android:layout_width="match_parent"
                android:textColor="@color/picture_color_white"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/white_bolder"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="110dp"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="54dp"
                android:layout_marginStart="11dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pay_date_month"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/pay_date_year"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pay_location"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:id="@+id/pay_user_info"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="NestedWeights">
                <TextView
                    android:id="@+id/pay_status"
                    android:maxLines="1"
                    android:layout_marginTop="6dp"
                    android:gravity="right"
                    android:paddingEnd="12dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />
                <TextView
                    android:id="@+id/pay_cost"
                    android:maxLines="1"
                    android:layout_marginTop="8dp"
                    android:gravity="right"
                    android:textSize="16sp"
                    android:paddingEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@color/picture_color_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginStart="14dp"
                    android:background="@color/themeColor"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginStart="13dp"
                    android:textSize="18sp"
                    android:textColor="@color/black_color"
                    android:text="@string/detail_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="13dp"
                android:background="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:layout_weight="1"
                    android:text="类型"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:text="单价"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:text="用量"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:text="合计"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:layout_marginBottom="10dp"
                android:background="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:layout_weight="1"
                    android:text="水费"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5元/立方"
                    android:textSize="@dimen/font_formal" />

                <TextView
                    android:layout_weight="1"
                    android:text="15"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/water_charge"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:layout_weight="1"
                    android:text="电费"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:text="2元/度"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="40"
                    android:textSize="@dimen/font_formal" />
                <TextView
                    android:id="@+id/electricity_charge"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:layout_weight="1"
                    android:text="物业管理费"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:text="3.5元/平方"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/area_property"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/property_charge"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:layout_weight="1"
                    android:text="本体维修基金"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:text="0.25元/平方"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/area_repair"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:text="25元"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_formal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:layout_marginTop="13dp"
                android:background="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_marginTop="17dp"
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:layout_weight="1"
                    android:text="总计"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/total_fee"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/show_pay_detail"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="84dp">
                <TextView
                    android:id="@+id/pay_type"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/pay_time"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
