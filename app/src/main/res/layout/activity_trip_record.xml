<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <include layout="@layout/back_bar"/>
        <TextView
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingBottom="5dp"
            android:onClick="showCalendar"
            android:id="@+id/selected_date"
            android:background="@color/themeColor"
            android:textColor="@color/app_color_f6"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <ImageView
                android:src="@drawable/ic_location"
                android:contentDescription="@string/my_picture"
                android:layout_marginStart="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:onClick="chooseDoor"
                android:id="@+id/tr_my_door"
                android:layout_marginStart="6dp"
                android:text="10栋1单元大门"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tr_time_quantum"
                android:text="00:00-23:59"
                android:layout_marginEnd="20dp"
                android:onClick="showMySelector"
                android:gravity="end"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <LinearLayout
                android:background="#AFE0F5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时间"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="人员信息"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="出/入状态"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>
            <ListView
                android:visibility="gone"
                android:id="@+id/tr_lv"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginTop="40dp"
                android:text="暂时无法查询出入记录"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/tr_dialog"
        android:onClick="hideAlert"
        android:visibility="gone"
        android:alpha="0.5"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </View>
    <ListView
        android:visibility="gone"
        android:background="@drawable/white_bolder"
        android:scrollbars="none"
        android:id="@+id/tr_dialog_lv"
        android:divider="@color/background_color"
        android:layout_marginTop="166dp"
        android:paddingTop="16dp"
        android:paddingBottom="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <LinearLayout
        android:id="@+id/tr_my_selector"
        android:background="@drawable/bolder"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="起始时间"
                android:layout_width="0dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="结束时间"
                android:layout_width="0dp"
                android:layout_height="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TimePicker
                android:id="@+id/start_time_pick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:timePickerMode="spinner"
                android:layout_height="wrap_content"/>
            <TimePicker
                android:id="@+id/end_time_pick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:timePickerMode="spinner"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:onClick="cancel"
                android:layout_marginStart="10dp"
                android:background="@color/darkGray"
                android:gravity="center"
                android:text="@string/cancel"
                android:layout_width="0dp"
                android:layout_height="30dp"/>
            <TextView
                android:onClick="sure"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/app_color_f6"
                android:background="@color/themeColor"
                android:text="@string/sure"
                android:layout_marginEnd="10dp"
                android:layout_width="0dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
