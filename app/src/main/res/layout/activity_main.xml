<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drag_l"
    android:background="@drawable/image_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:src="@drawable/theme_head"
        android:layout_width="300dp"
        android:scaleType="centerCrop"
        android:layout_height="300dp"
        android:contentDescription="@string/my_picture" />

    <ImageView
        android:id="@+id/welcome_iv"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo_text"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/my_picture"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/ll_dots"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/main_shadow"
        android:visibility="gone"
        android:alpha="0.3"
        android:background="@color/black_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/protocol_ll"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/white_bolder"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:contentDescription="@string/my_picture"
            android:layout_gravity="center"
            android:src="@drawable/app_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:textColor="@color/black_color"
            android:text="用户协议及隐私政策"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:text="非常感谢您选择使用联家产品，在您使用前，"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="12dp"
            android:layout_gravity="center"
            android:text="请您认真阅读并了解用户协议及隐私政策，以"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="12dp"
            android:layout_gravity="center"
            android:text="了解我们的服务内容和我们在收集和使用您相"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="12dp"
            android:layout_gravity="center"
            android:text="关个人信息时的处理规则。我们将严格按照  "
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginStart="6dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:onClick="showProtocol"
                android:text="《用户协议及隐私政策》"
                tools:ignore="OnClick"
                android:textColor="@color/themeColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="为您提供服务。       "
                android:textColor="@color/black_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_marginTop="40dp"
            android:background="@color/background_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:onClick="disagreeProtocol"
                android:text="不同意并退出"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/darkGray"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:ignore="OnClick"
                android:layout_height="50dp"/>
            <View
                android:background="@color/background_color"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:onClick="agreeProtocol"
                android:text="同意并继续"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/themeColor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                tools:ignore="OnClick" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>