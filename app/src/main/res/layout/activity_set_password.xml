<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include  layout="@layout/login_background"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            android:layout_height="wrap_content">
            <ImageView
                android:onClick="goBack"
                android:contentDescription="@string/my_picture"
                android:src="@drawable/ic_back_arrow"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="@color/app_color_f6"
                android:text="@string/set_pw"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:background="@drawable/bolder"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline">
            <ImageView
                android:contentDescription="@string/my_picture"
                android:src="@drawable/app_icon"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:layout_marginTop="38dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/set_pw_et"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:inputType="textVisiblePassword"
                    android:digits="@string/password_contain"
                    android:maxLength="16"
                    android:background="@android:color/transparent"
                    android:hint="@string/input_set_tips"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    tools:ignore="HardcodedText" />
                <ImageView
                    android:src="@drawable/ic_see_pw"
                    android:layout_gravity="center"
                    android:contentDescription="@string/my_picture"
                    android:layout_marginEnd="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <View
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginTop="38dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <EditText
                    android:id="@+id/input_again"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:digits="@string/password_contain"
                    android:maxLength="16"
                    android:background="@android:color/transparent"
                    android:hint="@string/input_again"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    tools:ignore="HardcodedText" />
                <ImageView
                    android:src="@drawable/ic_hide_pw"
                    android:layout_gravity="center"
                    android:contentDescription="@string/my_picture"
                    android:layout_marginEnd="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <View
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/go_next_btn"
                android:onClick="complete"
                android:background="@drawable/blue_button"
                android:layout_width="match_parent"
                android:text="@string/sure"
                android:textColor="@color/app_color_f6"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="40dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_marginTop="25dp"
                android:src="@drawable/logo_text"
                android:contentDescription="@string/my_picture"
                android:layout_width="match_parent"
                android:layout_height="24dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
